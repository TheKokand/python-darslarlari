# WHILE YORDAMIDA RO'YXATNI TO'LDIRISH
ismlar=[]
print("Yaqin Do'stlaringizni ruyhatini tuzamiz.")
n=1 # ismlarni sanaw ucun
while True:
  savol=f"{n}- do'stingizni ismini kiriting:"
  ism=input(savol)
  ismlar.append(ism)
  javob=input("davom etishni xolesmi ha\yo'q")
  if javob=='ha':
    n+=1
    continue
  else:
    break  
print(ismlar)    
